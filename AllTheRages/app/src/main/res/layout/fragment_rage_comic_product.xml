<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="295dp"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            >
            <TextView
                android:id="@+id/tv_type_comic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NƯỚC HOA PHÁP"
                android:textSize="16dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/tv_them1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÊM"
                android:layout_alignParentEnd="true"/>

            <android.support.v7.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/recycler_view_france"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_type_comic1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_2"
            android:layout_below="@id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="295dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <TextView
                android:id="@+id/tv_type_comic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NƯỚC HOA ĐỨC"
                android:textSize="16dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/tv_them2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÊM"
                android:layout_alignParentEnd="true" />

            <android.support.v7.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/recycler_view_germany"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_type_comic2"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_3"
            android:layout_below="@id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="295dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <TextView
                android:id="@+id/tv_type_comic3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NƯỚC HOA ÚC"
                android:textSize="16dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/tv_them3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÊM"
                android:layout_alignParentEnd="true" />

            <android.support.v7.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/recycler_view_australia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_type_comic3"/>
        </RelativeLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "vertical"
            android:stretchColumns="***"
            android:paddingTop="12dp"
            >
            <TableRow android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/akana"
                    android:scaleType="centerInside"
                    />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/akana"
                    android:scaleType="centerInside"
                    />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/akana"
                    android:scaleType="centerInside"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uy tín"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_weight="0.61"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giao hàng"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hàng đầu"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="chính hãng"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đến tận nơi"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>